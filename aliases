# make getting around the file system easier
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."

# quick config edit
alias ze='vim ~/custom_files/zshrc'
alias zs='source ~/zshrc'

# fix list
alias l='ls -lrth'


# python stuff
alias pip='/usr/local/bin/pip3'

# mkdir: create parent directories
alias mkdir="mkdir -pv"

# ping: stop after 5 pings
alias ping="ping -c 5" 


